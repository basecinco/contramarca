<div class="container">
  <div class="row justify-content-center">
    <div class="col-12 col-lg-6">
      <br>
      <br>
      <br>
      <br>
      <br>
      <br>
      <br>
      <br>
      <div class="row">
      <% @images.each do |img| %>
      <div class="col">
        <%= cl_image_tag img.data, width: "100%", height: "auto"%>
        </div>
      <% end %>
      </div>
      <br><br>

      <%=  simple_form_for [@story, @image] do |f| %>
        <%= f.input :data, label: false, class: "btn-white-text" %>
        <%= f.input :data_cache, as: :hidden %>
        <%= f.submit 'Add photo', class:"btn btn-gold btn-mid" %>
      <% end %>
     <br>

      <%= link_to "Done", story_path(@story), class:"btn btn-white btn'mid", style:"width:100%" %>
      <br>
    </div>
  </div>
</div>
