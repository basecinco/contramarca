<div class="container">
  <br>

  <%= render 'shared/authorcard', u: @user %>
  <% @stories.each do |s| %>

  <%#= link_to 'Stories Setting', functionality_path(s.id) %>
    <br>
    <%= render 'shared/story_compact', s: s %>


  <% if s.user == current_user %>
    <%= render "functionality", s: s %>
  <% end %>
  <br><br>
  <% end %>

  <% if @user == current_user %>
    <%= link_to 'NEW STORY', new_story_path, class: "btn-gold" %>
  <% end %>
</div>


