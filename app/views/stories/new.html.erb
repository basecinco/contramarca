    <div class="container_white">


    <div class="container">

    <div class="row justify-content-center">
      <div class="col-12">

        <%= simple_form_for(@story) do |f| %>
          <%= f.error_notification %>
          <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

          <div class="form-post">
           <label class="control-label check_boxes optional">Categories</label>
           <input type="hidden" name="story[category_ids][]" value="">
           <div class="category-choices">
             <% Category.all.each do |category| %>
               <input type="checkbox" hidden value="<%= category.id %>" name="story[category_ids][]" id="story_category_ids_<%= category.id %>">
               <label for="story_category_ids_<%= category.id %>" class="category-choice" value="qsdf">
                  <%= category.name %>
                  <i class="fa fa-check"></i>
               </label>
             <% end %>
            </div>
          </div>

            <div class="form-inputs mb-5">
              <%= f.input :title, placeholder:"HEADLINE", class: "headline-font", label: false %>
            </div>

              <input id="x" type="hidden" name="story[content]">
              <trix-editor class="trix-content text-trix" input="x" placeholder="CONTENT" rows="7">
              </trix-editor>

          <div class="form-actions">
            <%= f.button :submit, class:"btn-dark-grey" %>
          </div>
        <% end %>
        <br>
        <br>


      </div>
    </div>

  </div>
</div>
