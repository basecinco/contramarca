  <div class="container_white">


    <div class="container">

    <div class="row justify-content-center">
      <div class="col-12">
        <br>
        <br>
        <br>
        <%= simple_form_for(@story) do |f| %>
          <%= f.error_notification %>
          <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

            <div class="form-inputs mb-5">
              <%= f.input :title, placeholder:"HEADLINE", class: "headline-font" %>
            </div>
              <input id="x" type="hidden" name="story[content]">
              <trix-editor class="trix-content text-trix" input="x" placeholder="CONTENT" rows="10"></trix-editor>
          <div class="form-actions">
            <%= f.button :submit, class:"btn-dark-grey" %>
          </div>
        <% end %>
        <br>
        <br>
        <br>
        <%= link_to 'Back', user_path(current_user) %>
      </div>
    </div>

  </div>
</div>
