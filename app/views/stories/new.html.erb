<div class="container">
  <div class="row justify-content-center">
    <div class="col-12 col-lg-6">
      <%= simple_form_for(@story) do |f| %>
        <%= f.error_notification %>
        <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>
          <div class="form-inputs mb-5">
            <%= f.input :title, placeholder:"HEADLINE" %>
          </div>
        <trix-editor class="trix-content"  placeholder="CONTENT">
          <div class="form-inputs">
            <%= f.input :content %>
          </div>
        </trix-editor>
        <div class="form-actions btn btn-dark-grey mb-5">
          <%= f.button :submit %>
        </div>
      <% end %>
    </div>
  </div>
  <%= link_to 'Back', user_path(current_user) %>
</div>

