<!DOCTYPE html>
<html>
  <head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>contramarca</title>
    <%= csrf_meta_tags %>
    <%= action_cable_meta_tag %>
    <%= stylesheet_link_tag 'application', media: 'all' %>
    <%#= favicon_link_tag 'favicon.ico' %>
    <link rel="stylesheet" href="https://use.typekit.net/bil4cbt.css">
    <%#= stylesheet_pack_tag 'application', media: 'all' %> <!-- Uncomment if you import CSS in app/javascript/packs/application.js -->
  </head>
  <body>
    <% if controller.controller_name == "stories" && controller.action_name == "show"%>
      <%= render 'shared/navbar_author' %>
      <%= yield %>
    <% elsif controller.controller_name == "stories" && controller.action_name == "index"%>
      <%= render 'shared/navbar_logo' %>
      <%= yield %>
    <% elsif controller.controller_name == "stories" && controller.action_name == "search"%>
      <%= render 'shared/navbar_search' %>
      <%= yield %>
    <% elsif current_page?('http://localhost:3000/') %>
    <%= yield %>
      <%= render 'shared/footer' %>
    <% elsif controller.controller_name == "stories" && controller.action_name == "new"%>
      <%= render 'shared/navbar_new' %>
      <%= yield %>
     <% elsif controller.controller_name == "stories" && controller.action_name == "edit"%>
      <%= render 'shared/navbar_new' %>
      <%= yield %>
    <% else %>
        <%= render 'shared/navbar_blank'  %>
        <%= yield %>
    <% end %>


    <%= render 'shared/flashes' %>

    <%= javascript_include_tag 'application' %>
    <%= javascript_pack_tag 'application' %>


  </body>
</html>
