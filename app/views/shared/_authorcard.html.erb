<div class="narrow-container authorcard">


    <div class="title mb-3">
      <h5>
      <%= @user.first_name %>
      <%= @user.last_name %>
      </h5>
    </div>

    <% if user_signed_in? && @user == current_user %>
      <%= link_to "Sign out", destroy_user_session_path, method: :delete, data: {confirm: "Are you sure you want to log out?"} %>
    <% end %>


    <div class="bio mb-">
      <p>
        <%= @user.bio %>
      </p>
    </div>


    <div class="d-flex justify-content-center mb-3">
      <a class="btn-light-grey" href="#">FOLLOW</a>
    </div>
    <%#= link_to "FOLLOW",  stories_path, class: "btn-light-grey" %>


</div>
