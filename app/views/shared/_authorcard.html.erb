<div class="narrow-container authorcard">


    <div class="title mb-1">
      <h5>
      <%= u.first_name %>
      <%= u.last_name %>
      </h5>
    </div>
    <br>
    <div class="bio mb-0">
      <p class="mb-0">
        <%= u.bio %>
      </p>
    </div>

    <div class="d-flex justify-content-center mb-3">
      <%= link_to stories_path, class: "btn-dark-grey", style: "margin-top: 10px;" do %>
        <h3>follow</h3>
      <% end %>
    </div>




</div>
